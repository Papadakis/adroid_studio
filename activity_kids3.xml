<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.papadakis.demo_thesis.Kids3Activity"
    android:background="@drawable/kidsback">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="?android:selectableItemBackground"
        android:text="@string/game"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <ImageButton

        android:id="@+id/FirstImage"
        android:layout_width="175dp"
        android:layout_height="180dp"
        android:layout_below="@+id/SecondImage"
        android:layout_toEndOf="@+id/SecondImage"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@string/dress"
        app:srcCompat="@drawable/seed3" />

    <ImageButton
        android:id="@+id/SecondImage"
        android:layout_width="175dp"
        android:layout_height="170dp"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@string/dress"
        app:srcCompat="@drawable/seed2" />

    <ImageButton
        android:id="@+id/LastImage"
        android:layout_width="175dp"
        android:layout_height="195dp"
        android:layout_alignStart="@+id/SecondImage"
        android:layout_below="@+id/FirstImage"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@string/dress"
        app:srcCompat="@drawable/seed1" />

    <Button
        android:id="@+id/Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/LastImage"
        android:layout_alignEnd="@+id/FirstImage"
        android:background="@android:drawable/screen_background_light_transparent"
        android:text="@string/home" />

    <ImageButton
        android:id="@+id/SecondSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/SecondImage"
        android:layout_below="@+id/textView"
        android:background="@android:color/holo_blue_dark"
        android:contentDescription="@string/play"
        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageButton
        android:id="@+id/FirstSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Home"
        android:layout_alignTop="@+id/FirstImage"
        android:background="@android:color/holo_blue_dark"
        android:contentDescription="@string/play"
        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageButton
        android:id="@+id/LastSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/LastImage"
        android:layout_alignTop="@+id/LastImage"
        android:background="@android:color/holo_blue_dark"
        android:contentDescription="@string/play"
        app:srcCompat="@android:drawable/ic_media_play" />

</RelativeLayout>
