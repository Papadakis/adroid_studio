<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.papadakis.demo_thesis.Kids2Activity"
    android:background="@drawable/kidsback">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:background="?android:selectableItemBackground"
        android:text="@string/game"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <ImageButton

        android:id="@+id/FirstSound"
        android:layout_width="110dp"
        android:layout_height="190dp"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="58dp"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@string/dress"
        app:srcCompat="@drawable/bath3" />

    <ImageButton

        android:id="@+id/SecondSound"
        android:layout_width="110dp"
        android:layout_height="190dp"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignTop="@+id/LastSound"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@string/dress"
        app:srcCompat="@drawable/bath1" />

    <ImageButton

        android:id="@+id/LastSound"
        android:layout_width="110dp"
        android:layout_height="190dp"
        android:layout_alignTop="@+id/FirstSound"
        android:layout_centerHorizontal="true"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@string/dress"
        app:srcCompat="@drawable/bath2" />

    <Button
        android:id="@+id/Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/SecondSound"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="29dp"
        android:background="@android:drawable/screen_background_light_transparent"
        android:text="@string/next" />

    <Button
        android:id="@+id/Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/FirstSound"
        android:layout_alignTop="@+id/Next"
        android:background="@android:drawable/screen_background_light_transparent"
        android:text="@string/home" />

    <ImageButton
        android:id="@+id/SecondImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Home"
        android:layout_below="@+id/FirstSound"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="81dp"
        android:background="@android:color/holo_blue_dark"
        android:contentDescription="@string/play"
        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageButton
        android:id="@+id/LastImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/SecondImage"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_blue_dark"
        android:contentDescription="@string/play"
        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageButton
        android:id="@+id/FirstImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Next"
        android:layout_alignTop="@+id/LastImage"
        android:layout_marginStart="24dp"
        android:background="@android:color/holo_blue_dark"
        android:contentDescription="@string/play"
        app:srcCompat="@android:drawable/ic_media_play" />

</RelativeLayout>
